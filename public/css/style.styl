@import ('nib')
@import ('font.css')

_accent = #de2f32
_light = #f2f2f2
_textlight = #a89f9f
_dark = #212121

.sans-font
  font-family 'museo-sans', sans-serif
.serif-font
  font-family 'adobe-caslon-pro', serif

.pure-g [class *='pure-u'],
.pure-g-r [class*="pure-u"]
  @extends .sans-font

html,
body
  width 100%
  height 100%
  @extends .sans-font
  color #333333

.pure-form
  input[type='text'], input[type='password'], input[type='email'], input[type='url'], input[type='date'], input[type='month'], input[type='time'], input[type='datetime'], input[type='datetime-local'], input[type='week'], input[type='number'], input[type='search'], input[type='tel'], input[type='color'], select, textarea
    @extends .sans-font
  button
    @extends .sans-font

.pure-button
  @extends .sans-font

h1, h2, h3,
h4, h5, h6
  font-weight normal
  margin 5px 0
  line-height 1.2em

h1, h2, h3
  @extends .serif-font

h1
  font-size 48px
h2
  font-size 36px
h3
  font-size 30px

_spacer = 5, 10, 20, 40, 60, 80, 90, 100, 150, 190

for _val in _spacer
  .spacer-{ _val }
    height ( _val * 1px )

.text-left
  text-align left
.text-center
  text-align center
.text-right
  text-align right

  
.page
  width 100%
  height auto
  &.page-full-image
    background-size cover
    background-repeat no-repeat
    background-position center
    height 550px
    max-height 100%
    position relative
    overflow hidden
    &:after
      position absolute
      content ''
      top 0
      left 0
      right 0
      bottom 0
      background rgba(darken(_textlight, 30%), 0)
      transition background 1s ease
    &.fixed
      position fixed
      top -300px
      left 0
      right 0
      &:after
        background rgba(darken(_textlight, 30%), 0.4)
        
  &.page-fixed-image
    height 550px
    display none
    &.fixed
      display block
      
  &.page-pattern
    background-color _light
    background-image url('../img/pattern-concrete.png')
    background-position center
    background-repeat repeat

pre
  font-size 12px
  word-wrap break-word

.container
  margin 0 auto
  padding 0 50px

.loader
  position fixed
  z-index -1
  left 50%
  top 40%
  transform translate(-50%, -50%)
  .loader-inner
    & > div
      background lighten(_textlight, 30%)
  
//*** Layout Specifics ***//
header
  position fixed
  z-index 20
  top 50px
  left 50px
  right 50px
  background _light
  
  .header-inner
    clearfix()
    .pull-left
      float left
    .pull-right
      float right

  a.gso-hcam-logo
    display block
    width 90px
    height 90px
    float left

  menu
    margin 0
    padding 0
    float left
    ul
      display block
      margin 0
      padding 0 0 0 20px
      list-style none
      li
        display inline-block
        a
          display block
          padding 0 20px
          height 90px
          line-height 90px
          font-weight 500
          font-size 14px
          text-transform uppercase
          text-decoration none
          color _textlight
          cursor pointer
          transition color 0.5s ease
        &:hover,
        &.selected
          a
            color _accent
      
  form#search-form
    #search-container
      display none
      background #FFF
      height 84px
      margin 3px
      input[type="text"]
        background none
        border none
        border-radius 0
        box-shadow none
        outline none
        padding 0 0 0 20px
        line-height 35px
        height 35px
        font-size 14px
      button.search-button
        line-height 84px
        height 84px
        padding-right 27px

    button.search-button
      background none !important
      border-radius 0
      box-shadow none
      color _textlight
      transition color 0.5s ease
      padding 0 30px 0 20px
      line-height 90px
      height 90px
      outline none
      i
        display inline-block
        vertical-align middle
        font-size 20px
      &:hover
        color _dark
      

footer
  background _dark
  color lighten(_dark, 40%)
  font-size 14px
  line-height 20px
  font-weight 300
  
  a
    color lighten(_dark, 40%)
    text-decoration none
    transition color 0.5s ease
    &:hover
      color _light
  
  .footer-inner
    padding 45px
  
  .company-profile,
  .footer-menu
    margin 0 5px 30px 5px
    
  ul.footer-menu
    list-style none
    padding 0
    li
      display block
      margin-bottom 10px
      line-height 16px
      a
        display block
        font-size 14px
        font-weight 300
        strong
          text-transform uppercase
          font-weight 700

section.app
  background #FFF
  min-height 700px
  transition opacity 0.5s ease
  &.fade
    opacity 0

    
#home
  .home-box
    background-position center
    background-repeat no-repeat
    background-color _light
    background-size cover
    height 540px
    &.home-box-small
      height 180px
      background darken(_light, 5%)
      &.odd
        background darken(_light, 10%)
  #about
    h4
      color #7B7B7B
      a
        color _dark
        text-decoration underline
  #lasts
    & > .container
      padding 0 30px
    .last-box
      margin 0 20px 40px 20px
      text-align center
      .last-box-image
        background-position center
        background-repeat no-repeat
        background-color _light
        background-size cover
        height 240px
      
      .last-box-meta
        h3
          margin 20px 0 10px 0
        p
          font-size 14px
          color _textlight
          margin 0
          strong
            color darken(_textlight, 30%)

#category
  .category-box
    background-position center
    background-repeat no-repeat
    background-color _light
    background-size cover
    height 540px
    &.category-box-small
      height 180px
      background _accent
      position relative
      h1
        @extends .sans-font
        position absolute
        font-size 30px
        line-height 40px
        text-transform uppercase
        text-align center
        font-weight 300
        color #FFF
        top 50%
        left 20px
        right 20px
        transform translate(0, -50%)
        
        
    &.category-box-double
      height 360px
      background darken(_light, 5%)
