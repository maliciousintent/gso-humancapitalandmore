{
  "Intestazioni" : {
    "title" : {
      "type" : "StructuredText",
      "fieldset" : "Intestazioni articolo",
      "config" : {
        "single" : "heading1",
        "placeholder" : "Titolo"
      }
    },
    "excerpt" : {
      "type" : "StructuredText",
      "config" : {
        "single" : "heading3",
        "placeholder" : "Sommario articolo (circa 60 parole)"
      }
    },
    "featureImage" : {
      "type" : "Image",
      "fieldset" : "Immagine di copertina",
      "config" : {
        "placeholder" : "Carica un'mmagine",
        "constraint" : {
          "width" : 1920,
          "height" : 1080
        }
      }
    }
  },
  "Contenuto" : {
    "content" : {
      "type" : "StructuredText",
      "fieldset" : "Articolo",
      "config" : {
        "imageConstraint" : {
          "width" : 960
        }
      }
    },
    "quotes" : {
      "type" : "Group",
      "fieldset" : "Citazioni",
      "config" : {
        "fields" : {
          "Categoria" : {
            "type" : "StructuredText",
            "config" : {
              "multi" : "em,strong",
              "placeholder" : "Citazione"
            }
          }
        }
      }
    }
  },
  "Meta" : {
    "postDate" : {
      "type" : "Date",
      "fieldset" : "Dettagli",
      "config" : {
        "label" : "Data pubblicazione"
      }
    },
    "postReadingTime" : {
      "type" : "Number",
      "config" : {
        "label" : "Tempo di lettura"
      }
    },
    "postFeatured" : {
      "type" : "Select",
      "config" : {
        "label" : "Metti in evidenza",
        "options" : [ "Sì (verrà pubblicato in homepage)", "No" ]
      }
    },
    "categories" : {
      "type" : "Group",
      "fieldset" : "Categorie",
      "config" : {
        "fields" : {
          "Categoria" : {
            "type" : "Link",
            "config" : {
              "select" : "document",
              "masks" : [ "categoria" ],
              "placeholder" : "Categoria"
            }
          }
        }
      }
    },
    "authors" : {
      "type" : "Group",
      "fieldset" : "Autori",
      "config" : {
        "fields" : {
          "Autore" : {
            "type" : "Link",
            "config" : {
              "select" : "document",
              "masks" : [ "autore" ],
              "placeholder" : "Autore"
            }
          }
        }
      }
    }
  },
  "Correlati" : {
    "related[0]" : {
      "fieldset" : "Articoli correlati",
      "type" : "Link",
      "config" : {
        "placeholder" : "Articolo #1",
        "select" : "document",
        "masks" : [ "post" ]
      }
    },
    "related[1]" : {
      "type" : "Link",
      "config" : {
        "placeholder" : "Articolo #2",
        "select" : "document",
        "masks" : [ "post" ]
      }
    },
    "related[2]" : {
      "type" : "Link",
      "config" : {
        "placeholder" : "Articolo #3",
        "select" : "document",
        "masks" : [ "post" ]
      }
    }
  }
}